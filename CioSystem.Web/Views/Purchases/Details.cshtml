@using CioSystem.Models
@model Purchase

@{
    ViewData["Title"] = "進貨詳情";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-eye text-info"></i> 進貨詳情</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
            <i class="fas fa-edit"></i> 編輯
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> 返回列表
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">進貨資訊</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">進貨編號：</dt>
                            <dd class="col-sm-8"><strong>#@Model.Id</strong></dd>
                            
                            <dt class="col-sm-4">產品名稱：</dt>
                            <dd class="col-sm-8">@Model.Product?.Name</dd>
                            
                            <dt class="col-sm-4">產品編號：</dt>
                            <dd class="col-sm-8"><span class="badge bg-light text-dark">@Model.Product?.SKU</span></dd>
                            
                            <dt class="col-sm-4">產品分類：</dt>
                            <dd class="col-sm-8">@Model.Product?.Category</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">進貨數量：</dt>
                            <dd class="col-sm-8"><span class="badge bg-primary fs-6">@Model.Quantity</span></dd>
                            
                            <dt class="col-sm-4">進貨單價：</dt>
                            <dd class="col-sm-8"><strong>NT$ @Model.UnitPrice.ToString("N2")</strong></dd>
                            
                            <dt class="col-sm-4">總金額：</dt>
                            <dd class="col-sm-8"><span class="text-primary fw-bold fs-5">NT$ @((Model.Quantity * Model.UnitPrice).ToString("N2"))</span></dd>
                            
                            <dt class="col-sm-4">員工自留：</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.EmployeeRetention))
                                {
                                    <span class="badge bg-info">@Model.EmployeeRetention</span>
                                }
                                else
                                {
                                    <span class="text-muted">一般進貨</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">進貨日期：</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 產品資訊 -->
        @if (Model.Product != null)
        {
            <div class="card shadow mt-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-info">產品資訊</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">品牌：</dt>
                                <dd class="col-sm-8">@Model.Product.Brand</dd>
                                
                                <dt class="col-sm-4">顏色：</dt>
                                <dd class="col-sm-8">@Model.Product.Color</dd>
                                
                                <dt class="col-sm-4">尺寸：</dt>
                                <dd class="col-sm-8">@Model.Product.Dimensions</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">成本價：</dt>
                                <dd class="col-sm-8">NT$ @Model.Product.CostPrice.ToString("N2")</dd>
                                
                                <dt class="col-sm-4">建議售價：</dt>
                                <dd class="col-sm-8">NT$ @Model.Product.Price.ToString("N2")</dd>
                                
                                <dt class="col-sm-4">產品狀態：</dt>
                                <dd class="col-sm-8">
                                    @switch (Model.Product.Status)
                                    {
                                        case ProductStatus.Active:
                                            <span class="badge bg-success">在售</span>
                                            break;
                                        case ProductStatus.Inactive:
                                            <span class="badge bg-warning">停售</span>
                                            break;
                                        case ProductStatus.Discontinued:
                                            <span class="badge bg-danger">缺貨</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">未知</span>
                                            break;
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Product.Description))
                    {
                        <div class="mt-3">
                            <dt>產品描述：</dt>
                            <dd class="mt-2">@Model.Product.Description</dd>
                        </div>
                    }
                </div>
            </div>
        }
        
        <!-- 庫存影響 -->
        @if (Model.Product != null)
        {
            <div class="card shadow mt-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-success">庫存影響</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-6">進貨前庫存：</dt>
                                <dd class="col-sm-6">
                                    <span class="badge bg-secondary">
                                        @(Model.Product.InventoryItems?.Sum(i => i.Quantity) ?? 0) - @Model.Quantity = 
                                        @((Model.Product.InventoryItems?.Sum(i => i.Quantity) ?? 0) - Model.Quantity) 件
                                    </span>
                                </dd>
                                
                                <dt class="col-sm-6">進貨數量：</dt>
                                <dd class="col-sm-6">
                                    <span class="badge bg-primary">+@Model.Quantity 件</span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-6">進貨後庫存：</dt>
                                <dd class="col-sm-6">
                                    <span class="badge bg-success fs-6">
                                        @(Model.Product.InventoryItems?.Sum(i => i.Quantity) ?? 0) 件
                                    </span>
                                </dd>
                                
                                <dt class="col-sm-6">庫存變動：</dt>
                                <dd class="col-sm-6">
                                    <span class="text-success fw-bold">
                                        <i class="fas fa-arrow-up"></i> +@Model.Quantity 件
                                    </span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="col-md-4">
        <!-- 操作按鈕 -->
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-warning">操作</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> 編輯進貨記錄
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> 刪除進貨記錄
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list"></i> 返回進貨列表
                    </a>
                </div>
            </div>
        </div>
        
        <!-- 成本分析 -->
        @if (Model.Product != null)
        {
            <div class="card shadow mt-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-warning">成本分析</h6>
                </div>
                <div class="card-body">
                    @{
                        var productCostPrice = Model.Product.CostPrice;
                        var purchasePrice = Model.UnitPrice;
                        var priceDiff = purchasePrice - productCostPrice;
                        var priceDiffPercent = productCostPrice > 0 ? (priceDiff / productCostPrice * 100) : 0;
                        var totalCost = purchasePrice * Model.Quantity;
                    }
                    
                    <dl class="row">
                        <dt class="col-sm-6">產品成本價：</dt>
                        <dd class="col-sm-6">NT$ @productCostPrice.ToString("N2")</dd>
                        
                        <dt class="col-sm-6">進貨單價：</dt>
                        <dd class="col-sm-6">NT$ @purchasePrice.ToString("N2")</dd>
                        
                        <dt class="col-sm-6">價格差異：</dt>
                        <dd class="col-sm-6">
                            @if (priceDiff > 0)
                            {
                                <span class="text-warning fw-bold">+NT$ @priceDiff.ToString("N2")</span>
                            }
                            else if (priceDiff < 0)
                            {
                                <span class="text-success fw-bold">NT$ @priceDiff.ToString("N2")</span>
                            }
                            else
                            {
                                <span class="text-muted">NT$ 0</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-6">差異百分比：</dt>
                        <dd class="col-sm-6">
                            @if (priceDiffPercent > 0)
                            {
                                <span class="text-warning fw-bold">+@priceDiffPercent.ToString("F1")%</span>
                            }
                            else if (priceDiffPercent < 0)
                            {
                                <span class="text-success fw-bold">@priceDiffPercent.ToString("F1")%</span>
                            }
                            else
                            {
                                <span class="text-muted">0%</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-6">總成本：</dt>
                        <dd class="col-sm-6">
                            <span class="text-primary fw-bold fs-5">NT$ @totalCost.ToString("N2")</span>
                        </dd>
                    </dl>
                    
                    @if (priceDiff > 0)
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>注意：</strong>進貨單價高於產品建議成本價，可能影響利潤。
                        </div>
                    }
                    else if (priceDiff < 0)
                    {
                        <div class="alert alert-success mt-3">
                            <i class="fas fa-check-circle"></i>
                            <strong>良好：</strong>進貨單價低於產品建議成本價，有助於提高利潤。
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle"></i>
                            <strong>標準：</strong>進貨單價與產品建議成本價一致。
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>