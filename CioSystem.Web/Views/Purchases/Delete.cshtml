@using CioSystem.Models
@model Purchase

@{
    ViewData["Title"] = "刪除進貨";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trash-alt text-danger"></i> 刪除進貨記錄</h2>
    <div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
            <i class="fas fa-eye"></i> 查看詳情
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> 返回列表
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="alert alert-danger">
            <h4 class="alert-heading">
                <i class="fas fa-exclamation-triangle"></i> 警告！
            </h4>
            <p>您確定要刪除此進貨記錄嗎？此操作將會：</p>
            <ul class="mb-0">
                <li><strong>刪除進貨記錄</strong> - 此記錄將被標記為已刪除</li>
                <li><strong>減少庫存</strong> - 進貨的數量將從庫存中扣除</li>
                <li><strong>無法撤銷</strong> - 刪除後無法恢復此記錄</li>
            </ul>
        </div>

        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">進貨記錄詳情</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">進貨編號：</dt>
                            <dd class="col-sm-8"><strong>#@Model.Id</strong></dd>

                            <dt class="col-sm-4">產品名稱：</dt>
                            <dd class="col-sm-8">@((ViewBag.ProductName as string) ?? Model.Product?.Name ?? ("#" + Model.ProductId))</dd>

                            <dt class="col-sm-4">產品編號：</dt>
                            <dd class="col-sm-8"><span class="badge bg-light text-dark">@Model.Product?.SKU</span></dd>

                            <dt class="col-sm-4">產品分類：</dt>
                            <dd class="col-sm-8">@Model.Product?.Category</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">進貨數量：</dt>
                            <dd class="col-sm-8"><span class="badge bg-primary fs-6">@Model.Quantity</span></dd>

                            <dt class="col-sm-4">進貨單價：</dt>
                            <dd class="col-sm-8"><strong>NT$ @Model.UnitPrice.ToString("N2")</strong></dd>

                            <dt class="col-sm-4">總金額：</dt>
                            <dd class="col-sm-8"><span class="text-primary fw-bold fs-5">NT$ @((Model.Quantity * Model.UnitPrice).ToString("N2"))</span></dd>

                            <dt class="col-sm-4">員工自留：</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.EmployeeRetention))
                                {
                                    <span class="badge bg-info">@Model.EmployeeRetention</span>
                                }
                                else
                                {
                                    <span class="text-muted">一般進貨</span>
                                }
                            </dd>

                            <dt class="col-sm-4">進貨日期：</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- 庫存影響分析 -->
        @if (Model.Product != null)
        {
            <div class="card shadow mt-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-danger">庫存影響分析</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-6">當前庫存：</dt>
                                <dd class="col-sm-6">
                                    <span class="badge bg-primary">
                                        @(Model.Product.InventoryItems?.Sum(i => i.Quantity) ?? 0) 件
                                    </span>
                                </dd>

                                <dt class="col-sm-6">將扣除數量：</dt>
                                <dd class="col-sm-6">
                                    <span class="badge bg-danger">-@Model.Quantity 件</span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-6">刪除後庫存：</dt>
                                <dd class="col-sm-6">
                                    <span class="badge bg-warning fs-6">
                                        @((Model.Product.InventoryItems?.Sum(i => i.Quantity) ?? 0) - Model.Quantity) 件
                                    </span>
                                </dd>

                                <dt class="col-sm-6">庫存變動：</dt>
                                <dd class="col-sm-6">
                                    <span class="text-danger fw-bold">
                                        <i class="fas fa-arrow-down"></i> -@Model.Quantity 件
                                    </span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @{
                        var currentStock = Model.Product.InventoryItems?.Sum(i => i.Quantity) ?? 0;
                        var afterStock = currentStock - Model.Quantity;
                    }

                    @if (afterStock < 0)
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>危險警告：</strong>刪除此進貨記錄會導致庫存為負數，請檢查是否有相關銷售記錄。
                        </div>
                    }
                    else if (afterStock == 0)
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>注意：</strong>刪除此進貨記錄會導致庫存歸零。
                        </div>
                    }
                    else if (afterStock < 10)
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>注意：</strong>刪除此進貨記錄會導致庫存偏低。
                        </div>
                    }
                </div>
            </div>
        }

        <!-- 刪除確認表單 -->
        <div class="card shadow mt-4">
            <div class="card-body">
                <form asp-action="Delete" class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary me-md-2">
                        <i class="fas fa-times"></i> 取消刪除
                    </a>
                    <button type="submit" class="btn btn-danger" onclick="return confirm('您確定要刪除此進貨記錄嗎？此操作無法撤銷！')">
                        <i class="fas fa-trash"></i> 確認刪除
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- 操作按鈕 -->
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-warning">快速操作</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> 編輯進貨記錄
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-eye"></i> 查看詳情
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list"></i> 返回進貨列表
                    </a>
                </div>
            </div>
        </div>

        <!-- 成本分析 -->
        @if (Model.Product != null)
        {
            <div class="card shadow mt-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-warning">成本分析</h6>
                </div>
                <div class="card-body">
                    @{
                        var productCostPrice = Model.Product.CostPrice;
                        var purchasePrice = Model.UnitPrice;
                        var priceDiff = purchasePrice - productCostPrice;
                        var priceDiffPercent = productCostPrice > 0 ? (priceDiff / productCostPrice * 100) : 0;
                        var totalCost = purchasePrice * Model.Quantity;
                    }

                    <dl class="row">
                        <dt class="col-sm-6">產品成本價：</dt>
                        <dd class="col-sm-6">NT$ @productCostPrice.ToString("N2")</dd>

                        <dt class="col-sm-6">進貨單價：</dt>
                        <dd class="col-sm-6">NT$ @purchasePrice.ToString("N2")</dd>

                        <dt class="col-sm-6">價格差異：</dt>
                        <dd class="col-sm-6">
                            @if (priceDiff > 0)
                            {
                                <span class="text-warning fw-bold">+NT$ @priceDiff.ToString("N2")</span>
                            }
                            else if (priceDiff < 0)
                            {
                                <span class="text-success fw-bold">NT$ @priceDiff.ToString("N2")</span>
                            }
                            else
                            {
                                <span class="text-muted">NT$ 0</span>
                            }
                        </dd>

                        <dt class="col-sm-6">總成本：</dt>
                        <dd class="col-sm-6">
                            <span class="text-primary fw-bold fs-5">NT$ @totalCost.ToString("N2")</span>
                        </dd>
                    </dl>

                    <div class="alert alert-danger mt-3">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>注意：</strong>刪除此進貨記錄將損失 NT$ @totalCost.ToString("N2") 的進貨成本。
                    </div>
                </div>
            </div>
        }
    </div>
</div>