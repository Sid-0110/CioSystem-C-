            })
            .catch(error => {
                console.error('更新活動時間時發生錯誤:', error);
            });
        }
        
        // 頁面載入時開始定期更新
        document.addEventListener('DOMContentLoaded', function() {
            startActivityUpdate();
        });
        
        // 頁面卸載時清除定時器
        window.addEventListener('beforeunload', function() {
