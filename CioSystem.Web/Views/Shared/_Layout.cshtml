    <script>
    (function () {
        try {
            // 檢查是否在 HTTPS 環境
            const protocol = window.location.protocol;
            const baseUrl = `${protocol}//${window.location.host}`;

            const connection = new signalR.HubConnectionBuilder()
                .withUrl(`${baseUrl}/hubs/dashboard`, {
                    skipNegotiation: false,
                    transport: signalR.HttpTransportType.LongPolling
                })
                .withAutomaticReconnect([0, 2000, 10000, 30000])
                .configureLogging(signalR.LogLevel.Information)
                .build();

            connection.on('MetricsUpdated', function (payload) {
                // 顯示簡易載入指示（可在各頁各自處理）
                document.body.classList.add('loading-indicator');
                const map = {
                    totalRevenue: document.getElementById('metric-total-revenue'),
                    totalCost: document.getElementById('metric-total-cost'),
                    grossProfit: document.getElementById('metric-gross-profit'),
                    lowStockCount: document.getElementById('metric-low-stock'),
                    inventoryValue: document.getElementById('metric-inventory-value')
                };
                Object.keys(map).forEach(k => {
                    if (map[k] && payload && k in payload) {
                        map[k].innerText = (typeof payload[k] === 'number') ? payload[k].toLocaleString('zh-TW') : payload[k];
                    }
                });

                // 向頁面廣播事件，供各分頁（含報表）做動態刷新
                try {
                    window.dispatchEvent(new CustomEvent('metrics-updated', { detail: payload }));
                } catch { }
                setTimeout(() => document.body.classList.remove('loading-indicator'), 300);
            });

            // 連接狀態監聽
            connection.onclose(function (error) {
                if (error) {
                    console.warn('SignalR 連接關閉:', error);
                }
            });

            connection.onreconnecting(function (error) {
                console.info('SignalR 重新連接中...', error);
            });

            connection.onreconnected(function (connectionId) {
                console.info('SignalR 重新連接成功:', connectionId);
            });

            // 啟動連接，增加錯誤處理
            connection.start()
                .then(function () {
                    console.info('SignalR 連接成功');
                })
                .catch(function (err) {
                    console.warn('SignalR 連線失敗:', err);
                    // 如果連接失敗，不影響頁面功能
                });
        } catch (e) {
            console.warn('SignalR 初始化錯誤', e);
        }
    })();
    </script>
    <script>// 添加頁面載入動畫
