@using CioSystem.Models
@model Product

@{
    ViewData["Title"] = "產品詳情";
}

<div class="page-header fade-in">
    <div class="page-title">產品詳情</div>
    <div class="page-subtitle">查看產品的詳細資訊</div>
</div>

<div class="row fade-in">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-box me-2"></i>基本資訊
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">產品名稱</label>
                            <div class="fs-5 fw-semibold">@Model.Name</div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">產品編號 (SKU)</label>
                            <div><code class="bg-light px-3 py-2 rounded">@Model.SKU</code></div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">產品分類</label>
                            <div>
                                <span class="badge bg-primary fs-6">@Model.Category</span>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">價格</label>
                            <div class="fs-4 fw-bold text-success">$@Model.Price.ToString("N2")</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">產品狀態</label>
                            <div>
                                @if (Model.Status == ProductStatus.Active)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="fas fa-check-circle me-1"></i>啟用
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6">
                                        <i class="fas fa-pause-circle me-1"></i>停用
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">品牌</label>
                            <div class="fs-5">@(string.IsNullOrEmpty(Model.Brand) ? "未設定" : Model.Brand)</div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">顏色</label>
                            <div class="fs-5">@(string.IsNullOrEmpty(Model.Color) ? "未設定" : Model.Color)</div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">尺寸</label>
                            <div class="fs-5">@(string.IsNullOrEmpty(Model.Dimensions) ? "未設定" : Model.Dimensions)</div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <hr>
                    <div class="mb-4">
                        <label class="form-label fw-semibold text-muted">產品描述</label>
                        <div class="p-3 bg-light rounded">@Model.Description</div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <hr>
                    <div class="mb-4">
                        <label class="form-label fw-semibold text-muted">備註</label>
                        <div class="p-3 bg-light rounded">@Model.Notes</div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- 產品圖片 -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-image me-2"></i>產品圖片
                </h5>
            </div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;">
                }
                else
                {
                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 200px;">
                        <div class="text-center">
                            <i class="fas fa-image text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">暫無產品圖片</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- 庫存資訊 -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-warehouse me-2"></i>庫存資訊
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">最低庫存警戒值</span>
                        <span class="fw-semibold">@Model.MinStockLevel</span>
                    </div>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-info" style="width: 100%"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">最高庫存限制</span>
                        <span class="fw-semibold">@(Model.MaxStockLevel?.ToString() ?? "無限制")</span>
                    </div>
                    @if (Model.MaxStockLevel.HasValue)
                    {
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-warning" style="width: 75%"></div>
                        </div>
                    }
                </div>

                <hr>
                <div class="text-center">
                    <a href="@Url.Action("Index", "Inventory", new { productId = Model.Id })" class="btn btn-outline-primary">
                        <i class="fas fa-warehouse me-2"></i>查看庫存記錄
                    </a>
                </div>
            </div>
        </div>

        <!-- 操作按鈕 -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-cogs me-2"></i>操作
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>編輯產品
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>返回列表
                    </a>
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>刪除產品
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 系統資訊 -->
<div class="row mt-4 fade-in">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>系統資訊
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="text-center">
                            <div class="icon-wrapper mb-2">
                                <i class="fas fa-calendar-plus text-primary"></i>
                            </div>
                            <h6 class="text-muted">建立時間</h6>
                            <p class="fw-semibold">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <div class="icon-wrapper mb-2">
                                <i class="fas fa-user text-success"></i>
                            </div>
                            <h6 class="text-muted">建立者</h6>
                            <p class="fw-semibold">@(Model.CreatedBy ?? "系統")</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <div class="icon-wrapper mb-2">
                                <i class="fas fa-calendar-edit text-info"></i>
                            </div>
                            <h6 class="text-muted">最後更新</h6>
                            <p class="fw-semibold">@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <div class="icon-wrapper mb-2">
                                <i class="fas fa-user-edit text-warning"></i>
                            </div>
                            <h6 class="text-muted">更新者</h6>
                            <p class="fw-semibold">@(Model.UpdatedBy ?? "系統")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 刪除確認模態框 -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>確認刪除
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-trash text-danger" style="font-size: 3rem;"></i>
                </div>
                <p class="text-center">您確定要刪除產品 <strong>"@Model.Name"</strong> 嗎？</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>注意：</strong>此操作無法復原，相關的庫存記錄也會被影響。
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>取消
                </button>
                <form method="post" action="@Url.Action("Delete", new { id = Model.Id })" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>確認刪除
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>// 圖片載入錯誤處理
        document.querySelectorAll('img').forEach(img => {
            img.addEventListener('error', function () {
                this.style.display = 'none';
                const placeholder = this.nextElementSibling;
                if (placeholder) {
                    placeholder.style.display = 'block';
                }
            });
        });

        // 模態框動畫效果
        document.getElementById('deleteModal').addEventListener('show.bs.modal', function () {
            this.querySelector('.modal-content').style.transform = 'scale(0.8)';
            setTimeout(() => {
                this.querySelector('.modal-content').style.transform = 'scale(1)';
            }, 10);
        });

        // 進度條動畫
        document.querySelectorAll('.progress-bar').forEach(bar => {
            const width = bar.style.width;
            bar.style.width = '0%';
            setTimeout(() => {
                bar.style.width = width;
            }, 500);
        });
    </script>
}