@using CioSystem.Models
@model Product

@{
    ViewData["Title"] = "刪除產品";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trash-alt text-danger"></i> 刪除產品</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> 返回列表
    </a>
</div>

<div class="alert alert-warning" role="alert">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>警告：</strong>您即將刪除此產品。此操作無法復原，請確認您要刪除的產品資訊。
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">產品資訊</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">產品 ID:</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4">產品名稱:</dt>
                            <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                            <dt class="col-sm-4">產品分類:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary">@Model.Category</span>
                            </dd>

                            <dt class="col-sm-4">價格:</dt>
                            <dd class="col-sm-8">
                                <span class="h5 text-success">$@Model.Price.ToString("N2")</span>
                            </dd>

                            <dt class="col-sm-4">狀態:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Status == ProductStatus.Active)
                                {
                                    <span class="badge bg-success">啟用</span>
                                }
                                else if (Model.Status == ProductStatus.Inactive)
                                {
                                    <span class="badge bg-secondary">停用</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">@Model.Status</span>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">建立時間:</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                            <dt class="col-sm-4">更新時間:</dt>
                            <dd class="col-sm-8">@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                            <dt class="col-sm-4">建立者:</dt>
                            <dd class="col-sm-8">@(Model.CreatedBy ?? "系統")</dd>

                            <dt class="col-sm-4">更新者:</dt>
                            <dd class="col-sm-8">@(Model.UpdatedBy ?? "系統")</dd>

                            @if (!string.IsNullOrEmpty(Model.SKU))
                            {
                                <dt class="col-sm-4">SKU:</dt>
                                <dd class="col-sm-8">@Model.SKU</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.Brand))
                            {
                                <dt class="col-sm-4">品牌:</dt>
                                <dd class="col-sm-8">@Model.Brand</dd>
                            }
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <hr>
                    <h6>產品描述:</h6>
                    <p class="text-muted">@Model.Description</p>
                }

                @if (!string.IsNullOrEmpty(Model.Tags))
                {
                    <hr>
                    <h6>標籤:</h6>
                    <div>
                        @foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                        {
                            <span class="badge bg-info me-1">@tag.Trim()</span>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h6 class="mb-0">刪除確認</h6>
            </div>
            <div class="card-body">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="alert alert-danger" role="alert">
                        <h6 class="alert-heading">確認刪除</h6>
                        <p class="mb-0">您確定要刪除產品「<strong>@Model.Name</strong>」嗎？</p>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger" onclick="return confirmDelete()">
                            <i class="fas fa-trash"></i> 確認刪除
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-eye"></i> 查看詳細
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit"></i> 編輯產品
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> 取消
                        </a>
                    </div>
                </form>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">產品圖片</h6>
                </div>
                <div class="card-body">
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded">
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('您確定要刪除產品「@Model.Name」嗎？\n\n此操作無法復原！');
        }
    </script>
}